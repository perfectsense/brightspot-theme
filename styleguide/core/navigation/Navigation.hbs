<nav class="Navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">
    {{#with items}}
        <ul class="Navigation-items">
            {{#each this}}
                <li class="Navigation-items-item" {{#if this.isCurrent}}data-current-nav-item{{/if}}>{{this}}</li>
            {{/each}}
        </ul>
    {{/with}}
</nav>
